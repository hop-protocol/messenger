{
  "name": "@hop-protocol/contracts-v2",
  "private": true,
  "version": "1.0.0",
  "description": "Hop Contracts V2",
  "author": "Hop Team (@HopProtocol)",
  "license": "MIT",
  "scripts": {
    "compile": "forge build",
    "hardhat-compile": "npx hardhat compile",
    "compile-all": "npm run compile && npm run hardhat-compile",
    "test-send": "forge test --match-test test_Send -vv",
    "test-push-claim": "forge test --match-test test_PushClaim -vv",
    "test-bond": "forge test --match-test test_Bond -vv",
    "test-withdraw": "forge test --match-test test_Withdraw -vv",
    "test-fees": "forge test --match-test test_Fees -vv",
    "test": "npm run test-send && npm run test-push-claim && npm run test-bond && npm run test-withdraw && npm run test-fees",
    "test-simulation-single-path": "forge test --match-test test_runSimulationSinglePath -vv",
    "test-simulation-multi-path": "forge test --match-test test_runSimulationMultiPath -vv",
    "deploy": "forge script test/foundry/Deploy.s.sol --slow --broadcast",
    "deploy-dry-run": "forge script test/foundry/Deploy.s.sol",
    "lint": "eslint .",
    "prettier": "prettier '**/*.{json,sol,md}' --check"
  },
  "devDependencies": {
    "@eth-optimism/sdk": "^1.7.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.20.55",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.30.6",
    "@typescript-eslint/parser": "^5.32.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.8",
    "hardhat": "^2.9.9",
    "merkletreejs": "^0.2.32",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.1",
    "tslint": "^6.1.3",
    "typechain": "^5.2.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.0.3",
    "@openzeppelin/contracts": "^4.7.3",
    "hardhat-preprocessor": "^0.1.5"
  }
}
